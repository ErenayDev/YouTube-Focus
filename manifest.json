{
  "manifest_version": 2,
  "name": "YouTube Focus (Forked)",
  "version": "1.4",
  "description": "Fork of Youtube_Focus extension. Disable the Youtube recommendations, unneccessary texts, helping you to get a more focused experience at youtube.com",
  "author": "ErenayDev",
  "homepage_url": "https://github.com/ErenayDev/YouTube-Focus",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-focus-forked@erenaydev.proton.me",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "button/Focus48.png",
    "96": "button/Focus96.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["*://*.youtube.com/*", "storage"],
  "browser_action": {
    "default_icon": "button/Focus48.png",
    "default_title": "YouTube Focus (Forked)",
    "default_popup": "popup/youtube_focus.html"
  }
}
